node {
    def app

    stage('Clone repository') {
        checkout scm
    }

    stage('Build image') {
        app = docker.build("smitat/nodejsapp")
    }

    stage('Push image') {
        docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
        }
    }
    stage('k8s deploy') {
        sh "kubectl set image deploy nodejsapp nodejsapp=smitat/nodejsapp:${env.BUILD_NUMBER}"
    }  
}
